{
    "extends": [
      "@tsconfig/strictest/tsconfig.json",
      "@tsconfig/next/tsconfig.json"
  ],
  "compilerOptions": {
    "rootDir": "./src",
    "target": "ES6",
    "forceConsistentCasingInFileNames": true,
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": ["next-env.d.ts", "./src/**/*.ts", "./src/**/*.tsx", ".next/types/**/*.ts"],
}
